/* pages/mine/info.wxss */

.info-page {
}

.photo-box {
  height: 250rpx;
  background-color: #d3d3d3;
  flex-direction: column;
  margin-bottom: 20rpx;
}

.photo-box image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 100%;
}

.upload-btn {
  font-size: 26rpx;
  border-radius: 50rpx;
  color: #666;
  border: 1px solid #666;
  background-color: #f5f5f5;
  width: 140rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  margin-top: 26rpx;
}

.upload-btn-hover {
  opacity: 0.8;
}

.section-box {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  padding: 0 26rpx;
}

.section {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1px solid #f5f5f5;
  height: 100rpx;
  min-height: 100rpx;
}

.section-gap picker::after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 1px 1px 0 0;
  border-color: #ccc;
  border-style: solid;
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  margin-left: 22rpx;
}

.section-cal picker::after {
  content: " ";
  display: inline-block;
  height: 44rpx;
  width: 44rpx;
  background-image: url("data:image/png;base64,");
  background-size: cover;
  margin-left: 24rpx;
}

.section-box .section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 28rpx;
  min-width: 220rpx;
}

.section-title text {
  color: #d3d3d3;
}

.section input, .section picker {
  font-size: 28rpx;
  min-width: 100rpx;
  text-align: right;
}

.identity-picker {
  color: #999;
}

.btn-area {
  padding: 30rpx 70rpx 50rpx;
}

.btn-area button {
  background-color: #42be73;
  border-color: #42be73;
  color: #fff;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.button-hover {
  opacity: 0.7;
}

picker {
  height: 100%;
  display: flex;
  justify-content: flex-end;
  align-items: center;
}

.sex-group  label {
  width: 120rpx;
  font-size: 28rpx;
}

.sex-group radio {
  display: none;
}

.sex-status {
  width: 26rpx;
  height: 26rpx;
  border-radius: 100%;
  background-color: #f0f0f0;
  border: 6rpx solid #f0f0f0;
  margin-right: 20rpx;
}

.sex-checked {
  background-color: #35b36c;
}
