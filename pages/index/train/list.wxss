/* pages/index/train/list.wxss */

/**index.wxss**/

page {
  background-color: #f5f5f5;
}

.index-page {
  height: 100vh;
}

.column-body {
  margin-bottom: 20rpx;
  background-color: #fff;
  padding: 0 40rpx;
}

.column-title {
  font-size: 34rpx;
  white-space: nowrap;
  height: auto;
  overflow: hidden;
  line-height: 1;
  text-align: center;
  padding: 10px 0;
  color: #666;
  position: relative;
  width: 100%;
}

.column-title text {
  position: relative;
  z-index: 9;
  background-color: #fff;
  padding: 10rpx 20rpx;
}

.column-title:after, .column-title:before {
  content: '';
  position: absolute;
  top: 50%;
  left: 20%;
  right: 20%;
  height: 2rpx;
  background-color: #ccc;
}

.column-main {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
}

.button-hover {
  background-color: rgba(0, 0, 0, 0.1);
  opacity: 0.7;
}

.skill-item {
  display: flex;
  width: 100%;
  margin-bottom: 12rpx;
}

.skill-item .title {
  margin-bottom: 20rpx;
}

.skill-item .title text {
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
}

.skill-item:nth-child(1) .title text {
  background-color: #ff7575;
}

.skill-item:nth-child(2) .title text {
  background-color: #efc152;
}

.skill-item:nth-child(3) .title text {
  background-color: #35b36c;
}

.skill-body image {
  width: 220rpx;
  height: 220rpx;
  background-color: gray;
  flex-shrink: 0;
}

.skill-body  .content {
  padding: 20rpx 30rpx 20rpx 20rpx;
  flex: 1;
}

.skill-body .title {
  font-size: 30rpx;
  padding-bottom: 10rpx;
}

.skill-body .desc {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
