/* pages/index/service/index.wxss */

.nav {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
}

.list {
  padding-top: 104rpx;
}

.list-inner {
  background-color: #fff;
  padding: 20rpx 30rpx;
}

.yuesao {
  width: 100%;
  height: auto;
}

.filter-box {
  font-size: 32rpx;
  color: #999;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  background-color: #fff;
  border-bottom: 2rpx solid #ededed;
}

.filter-box .icon {
  padding: 0 30rpx;
  line-height: 70rpx;
  position: absolute;
  left: 0;
  top: 0;
  display: flex;
  align-items: center;
}

.filter-box .icon image {
  width: 40rpx;
  height: 40rpx;
  padding-right: 10rpx;
}

.radio-group-box {
}

.cur-category {
  line-height: 70rpx;
  width: 100%;
  text-align: center;
}

.filter-box .radio-group {
  width: 100%ï¼›;
  position: absolute;
  top: 72rpx;
  left: 0;
  right: 0;
  z-index: 9;
  background-color: #fff;
  visibility: hidden;
  transition: all 0.3s ease-in-out;
  opacity: 0;
}

.filter-box .radio-group.active {
  visibility: visible;
  opacity: 1;
}

.filter-box label {
  display: block;
  width: 100%;
  text-align: center;
  line-height: 90rpx;
  border-bottom: 2rpx solid #ededed;
}

.filter-box radio {
  display: none;
}

.empty-box {
  font-size: 30rpx;
  line-height: 90rpx;
  text-align: center;
}