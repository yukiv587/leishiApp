/* pages/product/index.wxss 产品 */

.product-page {
  display: flex;
}

.left-nav {
  width: 166rpx;
  height: 100vh;
  flex-shrink: 0;
}

.nav-group {
  flex-direction: column;
  width: 100%;
  font-size: 28rpx;
  background-color: #f5f0e9;
}

.nav-group radio {
  flex-direction: column;
  width: 100%;
  font-size: 28rpx;
  background-color: #f5f0e9;
}

.nav-group radio {
  display: none;
}

.nav-group label {
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding: 0 20rpx;
}

.nav-group label::after {
  content: "";
  width: 70rpx;
  height: 2rpx;
  background-color: #ece5da;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, -50%);
}

.nav-group .actived {
  background-color: #fff;
  color: #42be73;
}

.nav-group .actived::after, .nav-group label:last-child:after {
  display: none;
}

.product-body {
  flex: 1;
  height: 100vh;
}

.product-list-title {
  font-size: 26rpx;
  border-bottom: 1px solid #efefef;
  text-align: center;
  height: 48rpx;
  line-height: 48rpx;
}

.product-list {
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx;
}

.product-item {
  width: 260rpx;
  margin-bottom: 30rpx;
}

.product-item image {
  background-color: rosybrown;
  width: 260rpx;
  height: 260rpx;
}

.product-title {
  font-size: 28rpx;
  text-align: center;
  padding: 10rpx 0；
}
