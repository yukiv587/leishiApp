.skill-body image {
  width: 220rpx;
  height: 220rpx;
  background-color: gray;
  flex-shrink: 0;
  object-fit: cover;
}

.skill-body  .content {
  padding: 20rpx 30rpx 20rpx 20rpx;
  flex: 1;
}

.skill-body .title {
  font-size: 30rpx;
  padding-bottom: 10rpx;
}

.skill-body .desc {
  font-size: 24rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 4;
  -webkit-box-orient: vertical;
}
