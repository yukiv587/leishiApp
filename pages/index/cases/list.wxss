.page {
  padding: 0 30rpx;
}

.skill-item {
  display: flex;
  width: 100%;
  margin-bottom: 12rpx;
}

.skill-item .title {
  margin-bottom: 20rpx;
}

.skill-item .title text {
  padding: 10rpx 20rpx;
  border-radius: 50rpx;
  background-color: #ededed;
  font-size: 28rpx;
}

