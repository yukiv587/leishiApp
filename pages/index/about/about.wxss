/* pages/index/about.wxss */

page {
  background-color: #f7f7f7;
}

.banner {
  width: 100%;
}

.nav {
  position: fixed;
  left: 0;
  top: 0;
  width: 100%;
  z-index: 9999;
}

.list {
  padding-top: 104rpx;
}

.top {
  background-color: #fff;
  margin-bottom: 20rpx;
}

.about-content {
  display: block;
  font-size: 30rpx;
  padding: 0 30rpx 30rpx;
  text-indent: 2em;
  margin-top: -20rpx;
}

.photo {
  background-color: #fff;
  display: flex;
  justify-content: space-between;
  flex-wrap: wrap;
  padding: 20rpx 40rpx;
}

.photo-box {
  margin-bottom: 30rpx;
  width: 320rpx;
}

.photo .title {
  text-align: center;
  font-size: 24rpx;
  color: #4d4d4d;
  padding-top: 10rpx;
  width: 100%;
}

.photo image {
  width: 320rpx;
  height: 230rpx;
  border-radius: 8rpx;
}

.video-item {
  margin-bottom: 30rpx;
}

.video-item video {
  width: 100%;
  height: 400rpx;
}

.video-item .title {
  font-size: 30rpx;
  padding: 10rpx 30rpx;
}
