}

.product-price {
  font-size: 42rpx;
  color: #42be73;
}

.product-price text {
  font-size: 26rpx;
}

.num-box {
  display: flex;
  align-items: center;
  justify-content: flex-end;
}

.num {
  width: 60rpx;
  text-align: center;
  font-size: 28rpx;
}

.num-btn {
  width: 48rpx;
  height: 48rpx;
}

