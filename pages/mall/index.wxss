.product-page {
  background-color: #fff;
}

.main {
  display: flex;
}

.left-nav {
  box-sizing: border-box;
  width: 166rpx;
  height: 100vh;
  flex-shrink: 0;
  padding-bottom: 110rpx;
}

.nav-group {
  flex-direction: column;
  width: 100%;
  font-size: 28rpx;
  background-color: #f5f0e9;
}

.nav-group radio {
  flex-direction: column;
  width: 100%;
  font-size: 28rpx;
  background-color: #f5f0e9;
}

.nav-group radio {
  display: none;
}

.nav-group label {
  height: 140rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  padding: 0 20rpx;
}

.nav-group label::after {
  content: "";
  width: 70rpx;
  height: 2rpx;
  background-color: #ece5da;
  position: absolute;
  left: 50%;
  bottom: 0;
  transform: translate(-50%, -50%);
}

.nav-group .actived {
  background-color: #fff;
  color: #42be73;
}

.nav-group .actived::after, .nav-group label:last-child:after {
  display: none;
}

.product-body {
  height: 100vh;
  padding-bottom: 110rpx;
  box-sizing: border-box;
  flex-grow: 1;
}

.product-list-title {
  font-size: 26rpx;
  border-bottom: 1px solid #efefef;
  text-align: center;
  height: 48rpx;
  line-height: 48rpx;
}

.product-item {
  display: flex;
  padding: 30rpx 20rpx;
  border-bottom: 1px solid #efefef;
}

.product-item image {
  background-color: #f4f4f4;
  width: 220rpx;
  height: 220rpx;
}

.product-content {
  display: flex;
  flex-direction: column;
  justify-content: space-around;
  text-align: right;
  flex-grow: 1;
}

