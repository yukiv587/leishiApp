/* pages/login/identity.wxss */

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  padding-top: 480rpx;
}

.identity-page {
  position: relative;
}

.choose-box {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 99;
  width: 100vw;
  height: 100vh;
  display: flex;
  justify-content: center;
  align-items: center;
}

.masker {
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
  width: 100vw;
  height: 100vh;
  background-color: rgba(0, 0, 0, 0.6);
}

.choose-body {
  background-color: #fff;
  border-radius: 5px;
  width: 80%;
  font-size: 30rpx;
}

.choose-title {
  text-align: center;
  padding: 30rpx 0;
  border-bottom: 1px solid #ebebeb;
  font-weight: 600;
}

.choose-main {
  padding: 30rpx 50rpx;
}

.section {
  padding: 18rpx 0;
}

radio-group {
  display: flex;
  flex-direction: column;
}

.choose-main label {
  padding: 18rpx 0;
  display: flex;
  align-items: center;
  justify-content: center;
}

.choose-main label image {
  width: 54rpx;
  max-height: 44rpx;
  margin-right: 20rpx;
}

.choose-main radio {
   display: none; 
}

.btn-area button {
  font-size: 28rpx;
}

.radio-icon {
  width: 22rpx;
  height: 22rpx;
  margin-left: 20rpx;
}

.selected-icon {
  background: url("data:image/png;base64,") no-repeat center;
  background-size: cover;
}

.btn-area button {
  background-color: #fff;
}
