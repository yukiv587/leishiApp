/* pages/login/register.wxss */

page {
  background-color: #f7f7f7;
}

.register-page {
  padding: 0 30rpx;
}

.page-title {
  text-align: center;
  font-size: 34rpx;
  padding: 40rpx 0 32rpx;
}

form {
}

.section-box {
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}

.section {
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1px solid #f5f5f5;
}

.section-gap picker::after {
  content: " ";
  display: inline-block;
  height: 16rpx;
  width: 16rpx;
  border-width: 1px 1px 0 0;
  border-color: #ccc;
  border-style: solid;
  -webkit-transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  transform: matrix(0.71, 0.71, -0.71, 0.71, 0, 0);
  position: absolute;
  top: 50%;
  right: 40rpx;
  margin-top: -4px;
  margin-right: -4px;
}

.section-cal picker::after {
  content: " ";
  display: inline-block;
  height: 44rpx;
  width: 44rpx;
  background-image: url("data:image/png;base64,");
  background-size: cover;
  position: absolute;
  top: 50%;
  right: 40rpx;
  margin-top: -22rpx;
  margin-right: -22rpx;
}

.section-box .section:last-child {
  border-bottom: none;
}

.section-title {
  font-size: 28rpx;
  min-width: 220rpx;
}

.section-title text {
  color: #d3d3d3;
}

.section input, .section picker {
  font-size: 28rpx;
  min-width: 100rpx;
  text-align: right;
  padding-right: 50rpx;
}

.identity-picker {
  color: #999999;
}

.btn-area {
  padding: 30rpx 0 50rpx;
}

.btn-area button {
  background-color: #42be73;
  border-color: #42be73;
  color: #fff;
  font-size: 28rpx;
  height: 80rpx;
  line-height: 80rpx;
}

.button-hover {
  opacity: 0.7;
}
